<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/button_black_stoke_released"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_height="150dp"
        android:src="@drawable/like"
        android:id="@+id/product_image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_marginLeft="6dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/productName"
            android:text="ProductName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#29303F"
            android:textStyle="bold"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"
            android:id="@+id/productPrice"
            android:text="Rs 100"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            android:id="@+id/yourbidHolder"
            android:text="Your bid "
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="6dp"
            android:textColor="#363F50"
            android:id="@+id/yourBid"
            android:text="NA"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:id="@+id/negetiveLayoutWrapper"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#f16f6f"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/negetiveBidStatus"
                android:text="Not unique"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:background="#f16f6f"
                android:textColor="@color/white"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:id="@+id/bidAgainButton"
                android:layout_marginBottom="4dp"
                android:text="Bid"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:id="@+id/positiveBidStatus"
            android:textColor="#32CD32"
            android:text="Your bid is unique"
            />
    </FrameLayout>

</LinearLayout>